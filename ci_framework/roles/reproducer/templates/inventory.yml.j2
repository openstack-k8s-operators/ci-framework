{{ vm_type }}s:
  hosts:
{% for host in hosts %}
    {{ host.nic.host }}:
      ansible_host: {{ (host.stdout.split())[3] | ansible.utils.ipaddr('address') }}
      ansible_user: {{ admin_user }}
{% if admin_user == 'core' %}
      ansible_ssh_private_key_file: ~/.ssh/crc_key
{% endif %}
{% endfor %}

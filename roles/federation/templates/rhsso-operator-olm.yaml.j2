apiVersion: operators.coreos.com/v1
kind: OperatorGroup
metadata:
  name: rhsso-operator-group
  namespace: {{ cifmw_federation_operator_namespace }}
spec:
  targetNamespaces:
  - {{ cifmw_federation_keycloak_namespace }}
---

kind: Subscription
metadata:
  name: rhsso-operator
  namespace: {{ cifmw_federation_operator_namespace }}
spec:
  channel: stable
  installPlanApproval: Manual
  name: rhsso-operator
  source: redhat-operators
  sourceNamespace: openshift-marketplace

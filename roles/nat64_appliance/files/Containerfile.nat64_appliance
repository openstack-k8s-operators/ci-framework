ARG BASE_IMAGE=quay.io/centos/centos:stream9-minimal
FROM $BASE_IMAGE

WORKDIR /
COPY copy_out.sh .

ARG IMAGE_NAME=nat64-appliance
ARG IMAGE_FILE=$IMAGE_NAME.qcow2
ARG CHECKSUM_FILE=$IMAGE_FILE.sha256

COPY $IMAGE_FILE .
COPY $CHECKSUM_FILE .
ENV SRC_DIR=/
ENV DEST_DIR=/target
ENV CHECKSUM_FILE=$CHECKSUM_FILE

CMD ["/copy_out.sh"]
